.page.height-100.vert-align
	.page-signup.width-100(data-ng-controller='OrgSigninCtrl')
		.modal-dialog
			.panel.panel-profile
				.panel-heading(style="padding:0;")
					a.pull-left.profile(href="/")
						img(class="logo" alt="Vibrant Data Logo" src="https://s3-us-west-1.amazonaws.com/vdat-site/vdat_logonew.png" width="390" height="80")
					.clearfix
					h4(style="padding-left: 92px;") Welcome to {{hostOrg.orgName}}
					//- p.text-small Your invitation token: {{token}}
				.panel-body
					section
						.callout.callout-danger(ng-if="message")
							i.fa.fa-warning
							| {{' ' + message}}
						form.form-horizontal
							.form-group
								.col-sm-12
									.input-group.input-group-lg
										span.input-group-addon
											span.fa.fa-envelope-o.fa-fw
										input.form-control(ng-model='user.email', type='email', placeholder='email', disabled="disabled" dir-select-all)
							.form-group
								.col-sm-12
									.input-group.input-group-lg
										span.input-group-addon
											span.fa.fa-key.fa-fw
										input.form-control(ng-model='user.pswd', type='password', placeholder='password' dir-select-all)
							.divider
							input.power-btn.width-100.big(type="submit" ng-click='addExistingUserToOrg()', data-ng-disabled="!validateUserDetails()", value="Sign In")
					section
						.divider
			.text-center.text-small
				p Vibrant Data, Inc. All Rights Reserved.
