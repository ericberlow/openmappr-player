.recipe-block
	.recipe-block-item.row
		.item-desc.col-xs-1 
			.pull-right SNAPSHOT
			.pull-right.text(ng-if="inProgress && !run_finished && finalCompletion > 0") {{finalCompletion | number : 2}}%
		.col-xs-1
			div(ng-include="'#{server_prefix}#{view_path}/components/dashboard/recipes/phase_modals/phase_indicator.html'")
		.item-body.col-xs-9(ng-click="phasevm.onClick()")
			button.power-btn.secondary-btn.pull-right 
				i.fa.fa-pencil
				| &nbsp;Edit
			div(ng-repeat="snap in phasevm.cfg.snapshots")
				.row.vert-align
					.col-xs-10.top-align
						h6.height-100 {{$index+1}}
						.col-xs-12
							.h6(ng-if="snap.snapName") {{snap.snapName}}
							.h6(ng-if="!snap.snapName") Snapshot {{$index+1}}
							//too many to list
							//- div(ng-repeat="(attrId, attrVal) in snap.mapprSettings")
							//- 	.col-xs-12
							//- 		h6 {{::attrId}} - 
							//- 			span.text-qualify {{::attrVal}}
			div(ng-if="phasevm.cfg.genDefaultForNetwork")
				h6 Default Snapshot per network - 
					span.text-qualify Autogenerated
