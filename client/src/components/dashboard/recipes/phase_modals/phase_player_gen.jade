.recipe-block
	.recipe-block-item.row
		.item-desc.col-xs-1 
			.pull-right PLAYER
			.pull-right.text(ng-if="inProgress && !run_finished && finalCompletion > 0") {{finalCompletion | number : 2}}%
		.col-xs-1
			div(ng-include="'#{server_prefix}#{view_path}/components/dashboard/recipes/phase_modals/phase_indicator.html'")
		.item-body.col-xs-9(ng-click="phasevm.onClick()")
			button.power-btn.secondary-btn.pull-right 
				i.fa.fa-pencil
				| &nbsp;Edit
			div(ng-show="phasevm.cfg.isDisabled")
				h6 Disabled
			div(ng-show="!phasevm.cfg.isDisabled")
				h6 Enabled
